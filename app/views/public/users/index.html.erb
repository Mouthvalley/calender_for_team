<h1>Users</h1>
<p>This is the users index page.</p>

<div>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
</div>

<div>
  <%= link_to "ユーザー編集画面", my_page_edit_path%>
</div>

<table>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>名前</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if @user %>
      <tr>
        <td><%= @user.membership_id %></td>
        <td><%= "#{@user.last_name} #{@user.first_name}" %></td>
        <% if @user.profile_image.attached? %>
          <td><%= image_tag url_for(@user.profile_image), size: "100x100" %></td>
        <% else %>
          <td><%= image_tag "no_image.jpg", size: "100x100" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
